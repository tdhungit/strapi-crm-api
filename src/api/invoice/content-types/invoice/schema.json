{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "invoice_number": {
      "type": "string",
      "required": true
    },
    "sale_order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sale-order.sale-order",
      "inversedBy": "invoices"
    },
    "payment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::payment.payment",
      "inversedBy": "invoices"
    },
    "invoice_status": {
      "type": "string",
      "required": true
    },
    "issue_date": {
      "type": "date",
      "required": true
    },
    "due_date": {
      "type": "date"
    },
    "subtotal": {
      "type": "decimal",
      "default": 0
    },
    "discount_amount": {
      "type": "decimal",
      "default": 0
    },
    "tax_amount": {
      "type": "decimal",
      "default": 0
    },
    "total_amount": {
      "type": "decimal",
      "default": 0
    },
    "invoice_tax_amount": {
      "type": "decimal",
      "default": 0
    },
    "account_tax": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::account.account"
    },
    "description": {
      "type": "text"
    },
    "invoice_details": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice-detail.invoice-detail",
      "mappedBy": "invoice"
    }
  }
}
