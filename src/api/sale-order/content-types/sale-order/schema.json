{
  "kind": "collectionType",
  "collectionName": "sale_orders",
  "info": {
    "singularName": "sale-order",
    "pluralName": "sale-orders",
    "displayName": "Sale Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "column": {
        "unique": true,
        "notNullable": true
      }
    },
    "sale_date": {
      "type": "date",
      "required": true
    },
    "account": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::account.account",
      "inversedBy": "sale_orders"
    },
    "contact": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::contact.contact",
      "inversedBy": "sale_orders"
    },
    "order_status": {
      "type": "enumeration",
      "required": true,
      "default": "New",
      "enum": [
        "New",
        "In Progress",
        "Pending",
        "Approved",
        "Rejected",
        "Completed"
      ]
    },
    "subtotal": {
      "type": "decimal",
      "default": 0
    },
    "discount_type": {
      "type": "enumeration",
      "default": "percentage",
      "enum": ["percentage", "amount"]
    },
    "discount_amount": {
      "type": "decimal",
      "default": 0
    },
    "tax_type": {
      "type": "enumeration",
      "default": "percentage",
      "enum": ["percentage", "amount"]
    },
    "tax_amount": {
      "type": "decimal",
      "default": 0
    },
    "total_amount": {
      "type": "decimal",
      "default": 0
    },
    "assigned_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "sale_orders"
    },
    "sale_order_details": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sale-order-detail.sale-order-detail",
      "mappedBy": "sale_order"
    },
    "warehouse": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::warehouse.warehouse",
      "inversedBy": "sale_orders"
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "sale_order"
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "sale_order"
    }
  }
}
