{
  "kind": "collectionType",
  "collectionName": "email_templates",
  "info": {
    "singularName": "email-template",
    "pluralName": "email-templates",
    "displayName": "Email Template"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "default": "HTML",
      "enum": [
        "HTML",
        "Text"
      ]
    },
    "for_module": {
      "type": "enumeration",
      "required": true,
      "default": "Accounts",
      "enum": [
        "Accounts",
        "Contacts",
        "Leads",
        "Opportunities"
      ]
    },
    "content": {
      "type": "richtext"
    },
    "rawContent": {
      "type": "json"
    },
    "assigned_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "email_templates"
    },
    "mail_histories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::mail-history.mail-history",
      "mappedBy": "email_template"
    }
  }
}
